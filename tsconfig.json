{
  "exclude": [
    "local-subgraphs",
    "node_modules",
    "artifacts",
    "build",
    "cache"
  ],
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es7"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
